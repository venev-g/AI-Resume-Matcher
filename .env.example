# MongoDB Atlas Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/resume_matcher?retryWrites=true&w=majority
DATABASE_NAME=resume_matcher

# LLM Configuration
GEMINI_API_KEY=your_gemini_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here
DEFAULT_LLM_PROVIDER=gemini

# Model Configurations
GEMINI_MODEL=gemini-2.5-flash
OPENROUTER_MODEL=openai/gpt-oss-20b

# API Configuration
PORT=8000
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Matching Configuration
SIMILARITY_THRESHOLD=0.80
CLOSE_MATCH_THRESHOLD=0.65

# OCR Configuration
ENABLE_OCR=true
OCR_ENGINE=easyocr

# Database Connection Options
DB_CONNECTION_TIMEOUT=10000
DB_SERVER_SELECTION_TIMEOUT=5000
DB_MAX_POOL_SIZE=10
DB_MIN_POOL_SIZE=1

# LLM Configuration
LLM_MAX_RETRIES=3
LLM_DEFAULT_TEMPERATURE=0.5
LLM_DEFAULT_MAX_TOKENS=4000
LLM_MAX_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
